{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"es2015",
      "es2017",
      "es2018",
      "esnext"
		]
	},
	"include": [
		"./src/**/*"
	]
}
